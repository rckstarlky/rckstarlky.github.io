@model Service.Models.Contactus
<div class="find-touch-section">
    <div class="white-box-container">
        <div class="row">
            <h4 class="touch-title">Happy to listen from you!!</h4>
            <div class="col-xs-12 col-lg-12">
                

                <div class="form-horizontal">


                    @Html.ValidationSummary(true)
                    <div class="form-group">
            
                        <div class="col-md-4 touch-input-group">
                            @Html.LabelFor(model => model.Name, new { @class = "control-label1", required = "required" })
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                        <div class="col-md-4 touch-input-group">
                            @Html.LabelFor(model => model.Email, new { @class = "control-label1", required = "required" })
                            @Html.EditorFor(model => model.Email)
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                        <div class="col-md-4 touch-input-group">
                            @Html.LabelFor(model => model.mobilenumber, new { @class = "control-label1", required = "required", @type = "number" })
                            @Html.EditorFor(model => model.mobilenumber)
                            @Html.ValidationMessageFor(model => model.mobilenumber)
                        </div>
                    </div>
                    
                    <div class="form-group">
                       
                        <div class="col-md-12 touch-input-group">
                            @Html.LabelFor(model => model.Message, new { @class = "control-label1", required = "required" })
                            @Html.TextAreaFor(model => model.Message)
                            @Html.ValidationMessageFor(model => model.Message)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" id="getinmsg" value="Send" class="btn btn-primary" />
                        </div>
                    </div>
