                    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
                    <script>

                        var j = jQuery.noConflict();
                        j("#getinmsg").click(function () {
                            debugger;
                            var name = $("#Name").val();
                            var email = $("#Email").val();
                            var mobilenumber = $("#mobilenumber").val();
                            var mesassge = $("#Message").val();
                            $.ajax({
                                type: 'POST',
                                dataType: 'json',
                                url: '@Url.Action("GetInboxMsg", "Admin")',
                                // url: '/Admin/GetInboxMsg',
                                data: { name: name, email: email, mobilenumber: mobilenumber, mesassge: mesassge },
                                success: function (Data) {
                                    // $("#myModal").modal('show');
                                    alert("Thanks for contacting us!!");
                                    $("#Name").val('');
                                    $("#Email").val('');
                                    $("#mobilenumber").val('');
                                    $("#Message").val('');
                                },
                                error: function (XMLHttpRequest, textStatus, errorThrown) {

                                    alert("Error Ocucred while processing your request ");
                                }
                            });
                        });
                    </script>

                </div>
            </div>
        </div>
        </div>
    </div>
