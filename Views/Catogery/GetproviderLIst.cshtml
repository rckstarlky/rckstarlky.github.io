@model IEnumerable<Service.Models.AspNetUser>
@{
    ViewBag.Title = "GetproviderLIst";
    //Layout = null;
}
<div class="get-provide-section">
    <div class="white-box-container">
        <div class="top-head-title">
            <h3>Provider Registered With The service Finder PVt Ltd.</h3>
            <p>
                @if (ViewBag.ProviderMessage != null)
                {
                    @ViewBag.ProviderMessage
                }
            </p>
        </div>
        <div class="col-md-12 provide-table">
            <table class="table" id="providerlist">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(p => p.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(p => p.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(p => p.LastName)
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                        </td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-12 dashboard-btn">
            @Html.ActionLink("Back to Admin Dashboard", "Index", "Admin")
        </div>
    </div>
</div>

<script>
    $(function () {
        $("#providerlist").dataTable();
    })
</script>
