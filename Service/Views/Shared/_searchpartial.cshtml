@model IEnumerable<Service.Models.ProivderListModel>
@using PagedList.Mvc;
@using PagedList;

<table>
    <tr>
        <th width="100px">@Html.DisplayNameFor(model => model.Name)</th>
        <th width="500px">@Html.DisplayNameFor(model => model.Descripton)</th>
        <th width="100px"></th>
        <th width="100px"></th>
    </tr>
           

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@item.photo" height="70" width="70" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripton)
            </td>
            <td>
                <input type="button" class="btn btn-primary"value="Hire Me" onclick="checkloggedinuser('@item.providerid');" />
            </td>
        </tr>
    }

</table>
