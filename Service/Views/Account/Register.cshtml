@model Service.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <section id="loginForm" class="register-form-container">
        <div class="white-box-container">
            <h4 class="text-center">Register with the Service provider Pvt Ltd.</h4>
            <div class="col-md-12">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    <div class="login-form-text">
                       
                        <div class="form-group">
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                            </div>
                        </div>
                        
                        <div>
                            <div class="form-group">
                                <div class="col-md-6">
                                    @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "User Name" })
                                </div>
                                <div class="col-md-6">
                                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-6">
                                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "PassWord" })
                                </div>
                                <div class="col-md-6">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                                </div>
                            </div>
                            
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.Isprovider)
                                    @Html.LabelFor(m => m.Isprovider)<br />
                                    <span style="color:red">Please mark the Isprovider Checked If you are Provider.</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                    <input type="submit" class="btn btn-primary" value="Register" />
                                </div>
                            </div>
                        </div>
                        }
                    </div>
        </div>
</section>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    